{
  "settings": {
    "analysis": {
      "analyzer": {
        "markup_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "char_filter": [
            "html_strip"
          ],
          "filter": [
            "standard",
            "lowercase"
          ]
        }
      }
    }
  },
  "mappings": {
    "entry": {
      "_meta": {
        "_xpaths": {
          "id": "./@xml:id",
          "root": "//tei:entry",
          "fields": {
            "lemma_ksh": "./tei:form/tei:orth",
            "translation_deu": "./tei:sense/tei:cit/tei:quote",
            "as_xml": "."
          }
        }
      },
      "properties": {
        "lemma_ksh": {
          "type": "keyword"
        },
        "translation_deu": {
          "type": "keyword"
        },
        "as_xml": {
          "type": "text"
        }
      }
    }
  }
}