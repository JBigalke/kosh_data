{
  "settings": {
    "analysis": {
      "analyzer": {
        "markup_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "char_filter": [
            "html_strip"
          ],
          "filter": [
            "standard",
            "lowercase"
          ]
        }
      }
    }
  },
  "mappings": {
    "entry": {
      "_meta": {
        "_xpaths": {
          "id": "./@xml:id",
          "root": "//tei:cit[@type='example']",
          "fields": {
            "example_text": "./tei:quote",
            "xml": "."
          }
        }
      },
      "properties": {
        "example_text": {
          "type": "keyword"
        },
        "xml": {
          "type": "text"
        }
      }
    }
  }
}
